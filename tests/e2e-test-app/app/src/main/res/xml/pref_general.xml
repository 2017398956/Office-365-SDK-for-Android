<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <EditTextPreference
        android:name="exchangeResourceUrl"
        android:defaultValue="@string/prefExchangeResourceUrl"
        android:key="prefExchangeResourceUrl"
        android:summary="Enter the Exchange resource url"
        android:title="Exchange Resource URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="exchangeEndpointUrl"
        android:defaultValue="@string/prefExchangeEndpoint"
        android:key="prefExchangeEndpoint"
        android:summary="Enter the exchange endpoint url"
        android:title="Exchange Endpoint URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="filesResourceUrl"
        android:defaultValue="@string/prefFilesResourceUrl"
        android:key="prefFilesResourceUrl"
        android:summary="Enter the Files resource url"
        android:title="Files Resource URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="filesEndpointUrl"
        android:defaultValue="@string/prefFilesEndpoint"
        android:key="prefFilesEndpoint"
        android:summary="Enter the files endpoint url"
        android:title="Files Endpoint URL" >
    </EditTextPreference>
    <EditTextPreference
    android:name="discoveryResourceUrl"
    android:defaultValue="@string/prefDiscoveryResourceUrl"
    android:key="prefDiscoveryResourceUrl"
    android:summary="Enter the Discovery resource url"
    android:title="Discovery Resource URL" >
</EditTextPreference>
    <EditTextPreference
        android:name="discoveryEndpointUrl"
        android:defaultValue="@string/prefDiscoveryEndpoint"
        android:key="prefDiscoveryEndpoint"
        android:summary="Enter the Discovery endpoint url"
        android:title="Discovery Endpoint URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="directoryResourceUrl"
        android:defaultValue="@string/prefDirectoryResourceUrl"
        android:key="prefDirectoryResourceUrl"
        android:summary="Enter the Directory resource url"
        android:title="Directory Resource URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="directoryEndpointUrl"
        android:defaultValue="@string/prefDirectoryEndpoint"
        android:key="prefDirectoryEndpoint"
        android:summary="Enter the Directory endpoint url"
        android:title="Directory Endpoint URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="testMail"
        android:defaultValue="@string/prefTestMail"
        android:key="prefTestMail"
        android:summary="Enter the email for tests"
        android:title="Test Email" >
    </EditTextPreference>

    <EditTextPreference
        android:name="sharepointUrl"
        android:defaultValue="@string/prefSharePointUrl"
        android:key="prefSharepointUrl"
        android:summary="Enter your Sharepoint Server URL"
        android:title="Sharepoint URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="siteRelativeUrl"
        android:defaultValue="@string/prefSiteRelativeUrl"
        android:key="prefSiteRelativeUrl"
        android:summary="Enter your site relative URL"
        android:title="Site URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="listName"
        android:defaultValue="@string/prefListName"
        android:key="prefListName"
        android:summary="Enter the name of the list"
        android:title="List name" >
    </EditTextPreference>
    <EditTextPreference
        android:name="documentListName"
        android:defaultValue="@string/prefDocumentListName"
        android:key="prefDocumentListName"
        android:summary="Enter the name of the document list"
        android:title="Document List name" >
    </EditTextPreference>
    <EditTextPreference
        android:name="oneNoteEndpointUrl"
        android:defaultValue="@string/prefOneNoteEndpoint"
        android:key="prefOneNoteEndpoint"
        android:summary="Enter the OneNote endpoint url"
        android:title="OneNote Endpoint URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="oneDriveEndpointUrl"
        android:defaultValue="@string/prefOneDriveEndpoint"
        android:key="prefOneDriveEndpoint"
        android:summary="Enter the OneDrive endpoint url"
        android:title="OneDrive Endpoint URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="liveSDkClientId"
        android:defaultValue="@string/prefLiveSDKClientId"
        android:key="prefLiveSDKClientId"
        android:summary="Enter the LiveSDK client id"
        android:title="LiveSDK Client Id" >
    </EditTextPreference>
    <EditTextPreference
        android:name="graphResourceUrl"
        android:defaultValue="@string/prefGraphResourceUrl"
        android:key="prefGraphResourceUrl"
        android:summary="Enter the Graph resource url"
        android:title="Graph Resource URL" >
    </EditTextPreference>
    <EditTextPreference
        android:name="graphEndpointUrl"
        android:defaultValue="@string/prefGraphEndpoint"
        android:key="prefGraphEndpoint"
        android:summary="Enter the Graph endpoint url"
        android:title="Graph Endpoint URL" >
    </EditTextPreference>
    <ListPreference
        android:defaultValue="AAD"
        android:entries="@array/authOptions"
        android:entryValues="@array/authValues"
        android:key="prefAuthenticationMethod"
        android:summary="Select an authentication method"
        android:title="Authentication method" />

    <PreferenceScreen
        android:summary="Configure your AAD credentials"
        android:title="AAD Settings" >
        <intent android:action=".activities.AADSettingsActivity"/>
    </PreferenceScreen>

    <Preference
        android:key="prefEraseSettings"
        android:summary="Erase stored cookies"
        android:title="Erase Cookies" />

</PreferenceScreen>